# ==============================================
# MINTCOIN BACKEND - ENVIRONMENT VARIABLES
# ==============================================

# ==============================================
# APPLICATION
# ==============================================
NODE_ENV=development
PORT=3000
APP_NAME=mintcoin-backend

# ==============================================
# DATABASE (PostgreSQL)
# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=app
DB_PASSWORD=app
DB_NAME=app_db
DB_LOGGING=true
DB_SYNCHRONIZE=false

# ==============================================
# REDIS
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ==============================================
# KAFKA
# ==============================================
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=mintcoin-backend
KAFKA_GROUP_ID=mintcoin-group
KAFKA_RETRY_ATTEMPTS=5
KAFKA_RETRY_DELAY=3000

# ==============================================
# ELASTICSEARCH
# ==============================================
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=mintcoin

# ==============================================
# OBJECT STORAGE (MinIO/S3)
# ==============================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_AVATARS=avatars
S3_BUCKET_MEDIA=media
S3_BUCKET_LIVESTREAMS=livestreams
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# ==============================================
# JWT & AUTHENTICATION
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRATION=7d

# ==============================================
# OTP & SMS
# ==============================================
OTP_EXPIRATION_MINUTES=5
OTP_MAX_ATTEMPTS=3
SMS_PROVIDER=termii
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=MintCoin

# ==============================================
# KYC & NIN VERIFICATION
# ==============================================
KYC_PROVIDER=smile_id
KYC_API_KEY=your-kyc-api-key
KYC_API_SECRET=your-kyc-api-secret
KYC_PARTNER_ID=your-partner-id
NIN_VERIFICATION_ENABLED=true

# ==============================================
# PAYMENT GATEWAYS
# ==============================================
# Paystack
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public
PAYSTACK_WEBHOOK_SECRET=your_webhook_secret

# Flutterwave
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your-secret
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your-public
FLUTTERWAVE_ENCRYPTION_KEY=FLWSECK_TEST-your-encryption

# ==============================================
# WALLET & ECONOMICS
# ==============================================
COIN_TO_NAIRA_RATE=5
PLATFORM_COMMISSION_PERCENT=20
CREATOR_EARNINGS_PERCENT=80
MINIMUM_WITHDRAWAL_COINS=1000
WITHDRAWAL_PROCESSING_DAYS=2

# ==============================================
# CALL & ROOM BILLING
# ==============================================
CALL_RATE_PER_MINUTE_COINS=10
ROOM_RATE_PER_MINUTE_COINS=5
BILLING_TICK_INTERVAL_SECONDS=10

# ==============================================
# REFERRAL SYSTEM
# ==============================================
REFERRAL_COMMISSION_PERCENT=3
REFERRAL_CODE_LENGTH=8
REFERRAL_EARNING_DURATION_DAYS=365

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# WEBSOCKET
# ==============================================
WS_PORT=3001
WS_CORS_ORIGIN=*
WS_HEARTBEAT_INTERVAL=30000

# ==============================================
# MONITORING & LOGGING
# ==============================================
LOG_LEVEL=debug
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ==============================================
# ADMIN
# ==============================================
ADMIN_DEFAULT_EMAIL=admin@mintcoin.com
ADMIN_DEFAULT_PASSWORD=ChangeThisPassword123!

# ==============================================
# FEATURE FLAGS
# ==============================================
FEATURE_KYC_REQUIRED=false
FEATURE_REFERRAL_ENABLED=true
FEATURE_LIVESTREAM_ENABLED=true
FEATURE_GIFTS_ENABLED=true

# ==============================================
# CORS & SECURITY
# ==============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=localhost,127.0.0.1
