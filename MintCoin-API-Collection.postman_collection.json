        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.tokens) {",
                  "        pm.collectionVariables.set('accessToken', jsonData.data.tokens.accessToken);",
                  "        pm.collectionVariables.set('refreshToken', jsonData.data.tokens.refreshToken);",
                  "        pm.collectionVariables.set('sessionId', jsonData.data.sessionId);",
                  "        pm.collectionVariables.set('userId', jsonData.data.user.id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifier\": \"+2348012345678\",\n  \"identifierType\": \"phone\",\n  \"deviceId\": \"{{deviceId}}\",\n  \"deviceName\": \"iPhone 13\"\n}"
