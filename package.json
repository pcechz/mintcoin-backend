{
  "name": "backend",
  "packageManager": "yarn@4.11.0",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "build": "nest build",
    "lint": "nest lint",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "yarn typeorm migration:generate",
    "migration:create": "yarn typeorm migration:create",
    "migration:run": "yarn typeorm migration:run",
    "migration:revert": "yarn typeorm migration:revert",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "kafka:topics": "./scripts/create-kafka-topics.sh",
    "start:api-gateway": "nest start api-gateway",
    "start:api-gateway:dev": "nest start api-gateway --watch",
    "build:api-gateway": "nest build api-gateway",
    "start:auth-service": "nest start auth-service",
    "start:auth-service:dev": "nest start auth-service --watch",
    "build:auth-service": "nest build auth-service",
    "start:user-service": "nest start user-service",
    "start:user-service:dev": "nest start user-service --watch",
    "build:user-service": "nest build user-service",
    "start:kyc-service": "nest start kyc-service",
    "start:kyc-service:dev": "nest start kyc-service --watch",
    "build:kyc-service": "nest build kyc-service",
    "start:wallet-service": "nest start wallet-service",
    "start:wallet-service:dev": "nest start wallet-service --watch",
    "build:wallet-service": "nest build wallet-service",
    "start:ledger-service": "nest start ledger-service",
    "start:ledger-service:dev": "nest start ledger-service --watch",
    "build:ledger-service": "nest build ledger-service",
    "start:payment-service": "nest start payment-service",
    "start:payment-service:dev": "nest start payment-service --watch",
    "build:payment-service": "nest build payment-service",
    "start:room-service": "nest start room-service",
    "start:room-service:dev": "nest start room-service --watch",
    "build:room-service": "nest build room-service",
    "start:call-billing-service": "nest start call-billing-service",
    "start:call-billing-service:dev": "nest start call-billing-service --watch",
    "build:call-billing-service": "nest build call-billing-service",
    "start:chat-service": "nest start chat-service",
    "start:chat-service:dev": "nest start chat-service --watch",
    "build:chat-service": "nest build chat-service",
    "start:gift-service": "nest start gift-service",
    "start:gift-service:dev": "nest start gift-service --watch",
    "build:gift-service": "nest build gift-service",
    "start:referral-service": "nest start referral-service",
    "start:referral-service:dev": "nest start referral-service --watch",
    "build:referral-service": "nest build referral-service",
    "start:discovery-service": "nest start discovery-service",
    "start:discovery-service:dev": "nest start discovery-service --watch",
    "build:discovery-service": "nest build discovery-service",
    "start:social-graph-service": "nest start social-graph-service",
    "start:social-graph-service:dev": "nest start social-graph-service --watch",
    "build:social-graph-service": "nest build social-graph-service",
    "start:notification-service": "nest start notification-service",
    "start:notification-service:dev": "nest start notification-service --watch",
    "build:notification-service": "nest build notification-service",
    "start:moderation-service": "nest start moderation-service",
    "start:moderation-service:dev": "nest start moderation-service --watch",
    "build:moderation-service": "nest build moderation-service",
    "start:fraud-service": "nest start fraud-service",
    "start:fraud-service:dev": "nest start fraud-service --watch",
    "build:fraud-service": "nest build fraud-service",
    "start:admin-service": "nest start admin-service",
    "start:admin-service:dev": "nest start admin-service --watch",
    "build:admin-service": "nest build admin-service",
    "start:analytics-service": "nest start analytics-service",
    "start:analytics-service:dev": "nest start analytics-service --watch",
    "build:analytics-service": "nest build analytics-service",
    "services:core": "concurrently -n auth,user -c blue,green \"yarn start:auth-service:dev\" \"yarn start:user-service:dev\"",
    "services:financial": "concurrently -n kyc,wallet,ledger,payment -c cyan,magenta,yellow,red \"yarn start:kyc-service:dev\" \"yarn start:wallet-service:dev\" \"yarn start:ledger-service:dev\" \"yarn start:payment-service:dev\"",
    "services:communication": "concurrently -n room,call,chat -c blue,cyan,green \"yarn start:room-service:dev\" \"yarn start:call-billing-service:dev\" \"yarn start:chat-service:dev\"",
    "services:feature": "concurrently -n gift,ref,disc,social -c blue,green,yellow,magenta \"yarn start:gift-service:dev\" \"yarn start:referral-service:dev\" \"yarn start:discovery-service:dev\" \"yarn start:social-graph-service:dev\"",
    "services:platform": "concurrently -n notif,mod,fraud,admin,analytics -c green,yellow,red,magenta,cyan \"yarn start:notification-service:dev\" \"yarn start:moderation-service:dev\" \"yarn start:fraud-service:dev\" \"yarn start:admin-service:dev\" \"yarn start:analytics-service:dev\"",
    "services:all": "concurrently -n auth,user,kyc,wallet,ledger,payment,room,call,chat,gift,ref,disc,social,notif,mod,fraud,admin,analytics -c auto \"yarn start:auth-service:dev\" \"yarn start:user-service:dev\" \"yarn start:kyc-service:dev\" \"yarn start:wallet-service:dev\" \"yarn start:ledger-service:dev\" \"yarn start:payment-service:dev\" \"yarn start:room-service:dev\" \"yarn start:call-billing-service:dev\" \"yarn start:chat-service:dev\" \"yarn start:gift-service:dev\" \"yarn start:referral-service:dev\" \"yarn start:discovery-service:dev\" \"yarn start:social-graph-service:dev\" \"yarn start:notification-service:dev\" \"yarn start:moderation-service:dev\" \"yarn start:fraud-service:dev\" \"yarn start:admin-service:dev\" \"yarn start:analytics-service:dev\""
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.709.0",
    "@aws-sdk/s3-request-presigner": "^3.709.0",
    "@elastic/elasticsearch": "^8.16.0",
    "@nestjs/axios": "^3.1.2",
    "@nestjs/bull": "^10.2.1",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^10.4.8",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.8",
    "@nestjs/event-emitter": "^2.1.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.4.8",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.8",
    "@nestjs/platform-socket.io": "^10.4.8",
    "@nestjs/schedule": "^4.1.1",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/throttler": "^6.2.1",
    "@nestjs/typeorm": "^10.0.2",
    "@nestjs/websockets": "^10.4.8",
    "@types/bcrypt": "^5.0.2",
    "@types/lodash": "^4.17.13",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/uuid": "^10.0.0",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.3",
    "cache-manager": "^5.7.6",
    "cache-manager-ioredis": "^2.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dayjs": "^1.11.13",
    "helmet": "^8.1.0",
    "ioredis": "^5.4.1",
    "kafkajs": "^2.2.4",
    "lodash": "^4.17.21",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.8",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "nx": "^22.1.3",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/config(|/.*)$": "<rootDir>/libs/config/src/$1",
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@app/dto(|/.*)$": "<rootDir>/libs/dto/src/$1",
      "^@app/events(|/.*)$": "<rootDir>/libs/events/src/$1",
      "^@app/guards(|/.*)$": "<rootDir>/libs/guards/src/$1",
      "^@app/persistence(|/.*)$": "<rootDir>/libs/persistence/src/$1",
      "^@app/messaging(|/.*)$": "<rootDir>/libs/messaging/src/$1",
      "^@app/validation(|/.*)$": "<rootDir>/libs/validation/src/$1"
    }
  }
}
