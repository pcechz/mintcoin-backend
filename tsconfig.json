{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/config": ["libs/config/src"],
      "@app/config/*": ["libs/config/src/*"],
      "@app/common": ["libs/common/src"],
      "@app/common/*": ["libs/common/src/*"],
      "@app/dto": ["libs/dto/src"],
      "@app/dto/*": ["libs/dto/src/*"],
      "@app/events": ["libs/events/src"],
      "@app/events/*": ["libs/events/src/*"],
      "@app/guards": ["libs/guards/src"],
      "@app/guards/*": ["libs/guards/src/*"],
      "@app/persistence": ["libs/persistence/src"],
      "@app/persistence/*": ["libs/persistence/src/*"],
      "@app/messaging": ["libs/messaging/src"],
      "@app/messaging/*": ["libs/messaging/src/*"],
      "@app/validation": ["libs/validation/src"],
      "@app/validation/*": ["libs/validation/src/*"]
    }
  }
}
